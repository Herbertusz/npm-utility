{
    "name": "@herbertusz/utility",
    "description": "Utility functions",
    "author": "Horv√°th Norbert (https://github.com/Herbertusz)",
    "version": "0.1.15",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Herbertusz/npm-utility.git"
    },
    "type": "module",
    "main": "./dist/utility.cjs",
    "module": "./dist/utility.mjs",
    "types": "./dist/types/utility.d.ts",
    "files": [
        "dist", "src"
    ],
    "exports": {
        ".": {
            "import": "./dist/utility.mjs",
            "types": "./dist/types/utility.d.ts"
        }
    },
    "scripts": {
        "dev": "vite --host",
        "build": "rimraf dist && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
        "clean": "npm run build",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint . --ext .ts",
        "format": "eslint . --ext .ts --fix",
        "prepare": "npm run clean && npm run build"
    },
    "devDependencies": {
        "@types/jsdom": "^21.1.1",
        "@types/lodash": "^4.17.13",
        "@types/node": "^20.14.11",
        "@typescript-eslint/eslint-plugin": "^7.13.1",
        "@typescript-eslint/parser": "^7.13.1",
        "@vitest/coverage-v8": "^2.1.8",
        "dts-bundle-generator": "^9.5.1",
        "eslint": "^8.57.0",
        "happy-dom": "^15.11.7",
        "lint-staged": "^15.2.11",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.7.2",
        "vite": "^6.0.5",
        "vitest": "^2.1.8"
    },
    "dependencies": {
        "lodash": "^4.17.21"
    }
}
